{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "node_modules/@prisma/client/libquery_engine-rhel-openssl-1.0.x.so.node",
          "node_modules/prisma/libquery_engine-rhel-openssl-1.0.x.so.node",
          "prisma/schema.prisma"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/index",
      "dest": "/src/index.ts"
    }
  ]
}